{{ define "content" }}
<section>
    {{ range .Entries }}
    <article class="overflow-auto mobile">
        {{ if .Image }}
        <div class="home-photo hide-on-mobile" style="background-image: url({{ .Image }});  width: 300px; margin-right: .4em;"></div>
        {{ end }}
        <h4>{{ .Type.Emoji }} <a href="{{ .Permalink }}">{{ or .Title .Slug }}</a></h4>
        ğŸ•°ï¸
