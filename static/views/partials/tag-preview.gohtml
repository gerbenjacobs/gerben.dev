{{ define "tag-preview"}}
<article class="kindy">
    <p class="kindy-divider">â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€à¹‘â™¡â à¹‘â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€</p>
    <h2 class="right" style="margin-left: 1em;"><a href="{{.Permalink}}">{{ .Type.Emoji }} {{.Type}}</a></h2>
    {{ if .Title }}<h2>{{ .Title }}</h2>{{ end }}
    <p>
        {{ .Type.Emoji }}
        <time datetime="{{ .PublishedAt.Format " 2006-01-02T15:04:05Z07:00" }}">
            ğŸ•°ï¸&nbsp;<a href="{{ .Permalink }}" title="{{ .PublishedAt.Format " 2006-01-02T15:04:05Z07:00" }}">
                {{ .PublishedAt.Format "Jan 02, 2006" }}
            </a>
        </time>
        {{ if .Geo -}}
        ğŸ—ºï¸&nbsp;<a href="https://www.openstreetmap.org/#map=15/{{ .Geo.Latitude }}/{{ .Geo.Longitude }}" target="_blank">
            <span>{{ .Geo.Latitude }}</span>,
            <span>{{ .Geo.Longitude }}</span>
        </a>
        {{- end }}
        {{ if .Tags -}}
        {{- range .Tags -}}
        ğŸ·ï¸&nbsp;<a href="/tags/{{ . }}">{{ . }}</a>
        {{ end -}}
        {{- end }}
    </p>
    {{ if eq .Type "photo" }}
        {{ if .IsVideo }}
        <div class="center-align">
            <video class="responsive-video" style="width: 300px;" autoplay loop muted>
                <source class="u-video" src="{{.Content}}" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>
        {{ else }}
        <figure class="center-align" style="margin: 0;">
            <a href="{{ .Permalink }}">
                <img src="{{ .Thumbnail }}" alt="{{ .MustTitle }}" class="hoverable" loading="lazy">
            </a>
            {{ if .Summary -}}<figcaption>{{ .Summary }}</figcaption>{{- end }}
        </figure>
        {{ end }}
    {{ else}}
        {{ if .Image }}
        <div class="home-photo" style='background-image: url({{ .Image }}); filter: drop-shadow(5px 5px 10px #666); margin-right: 2em;'></div>
        {{ end }}
        {{ if .Summary }}
            <p>
                {{ .Summary }}
                {{ if .LikeOf }}<a target="_blank" href="{{ .LikeOf }}">{{ .LikeOf }}</a>{{ end }}
                {{ if .RepostOf }}<a target="_blank" href="{{ .RepostOf }}">{{ .RepostOf }}</a>{{ end }}
            </p>
        {{else}}
            <p>{{ .GetContent }}</p>
        {{ end }}
    {{ end }}
</article>
{{ end}}