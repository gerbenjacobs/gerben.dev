        <div class="col m6">
            <h2>Timeline</h2>
            <div style="max-height: 800px; overflow: auto; background-color: #c9c7c7;">
            {{ template "timeline-paginated" $ }}
            </div>
            <a href="/timeline" class="btn" style="margin-top: 1em;">View entire timeline</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>Photos</h2>
            {{ range .Photos }}
            <article class="home-photo" style="background-image: url({{ .Thumbnail }}); filter: drop-shadow(5px 5px 10px #666);">
                <a href="{{ .Permalink }}">
                    {{ .Type.Emoji }}
                    {{ if .Title -}}
                    {{ .Title }}
                    {{- else if .Summary -}}
                    {{ printf "%.50s.." .Summary }}
                    {{- else -}}
                    Untitled
                    {{- end }}
                    {{ if .Tags -}}
                    <br>
                    üè∑Ô∏è
                    <small>
                        {{ if gt (len .Tags) 2 }}
                        {{- range slice .Tags 0 2 -}}
                            #{{.}}
                        {{ end -}}
                        +{{ len (slice .Tags 2) }} tags
                        {{ else }}
                        {{- range .Tags -}}
                            #{{.}}
                        {{ end -}}
                        {{ end }}
                    </small>
                    {{- end }}
                </a>
            </article>
            {{ end }}
            <a href="/photos/" class="btn">View all photos</a> or <a href="/photos/featured" class="btn">‚≠ê View just Featured Photos</a>
        </div>
    </div>
    <div style="clear: both;">&nbsp;</div>
