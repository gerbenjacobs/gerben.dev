                <a href="https://web.brid.gy/r/https://bsky.app/profile/gerben.dev" rel="me">&nbsp;</a>
            </li>
        </ul>
    </section>
</div>
<div class="grid">
    <section id="posts">
        <h2>Posts <a href="/feed.xml">üõú</a></h2>
        {{ range .Posts }}
        <article>
            <h3>{{ .Type.Emoji }} <a href="{{ .Permalink }}">{{ or .Title .Slug }}</a></h3>
            üï∞Ô∏è
            <time datetime="{{ .PublishedAt.Format " 2006-01-02T15:04:05Z07:00" }}" 
                title="{{ .PublishedAt.Format "2006-01-02T15:04:05Z07:00" }}">
                {{- .PublishedAt.Format "Jan 02, 2006" -}}
            </time>
            {{ if .Tags -}}
            üè∑Ô∏è
            <span>
                {{- range .Tags -}}
                <a href="/tags/{{.}}">#{{.}}</a>
                {{ end -}}
            </span>
            {{- end }}
            <p>{{ .Summary }}</p>
        </article>
        {{ end }}
        <a href="/posts/" role="button">View all posts</a>
    </section>
    <section id="timeline" class="overflow-auto" style="max-height: 943px;">
        <h2>Timeline <a href="/timeline.xml">üõú</a></h2>
        <div id="home-timeline" class="h-feed">
            <p class="p-name" hidden="hidden"><a class="u-url" href="/timeline">@gerben.dev &mdash; Timeline</a></p>
            {{ template "timeline-paginated" $ }}
        </div>
        <a href="/timeline" role="button">View entire timeline</a>
    </section>
</div>
<section id="photos">
    <h2>Photos <a href="/photos.xml">üõú</a></h2>
    {{ range .Photos }}
    <article class="home-photo" style="background-image: url({{ .Thumbnail }});">
        <a href="{{ .Permalink }}">
            {{ .Type.Emoji }}
            {{ if .Title -}}
            {{ .Title }}
            {{- else if .Summary -}}
            {{ printf "%.50s.." .Summary }}
            {{- else -}}
            Untitled
            {{- end }}
            {{ if .Tags -}}
            <br>
            üè∑Ô∏è
            <small>
                {{ if gt (len .Tags) 2 }}
                {{- range slice .Tags 0 2 -}}
                #{{.}}
                {{ end -}}
                +{{ len (slice .Tags 2) }} tags
                {{ else }}
                {{- range .Tags -}}
                #{{.}}
                {{ end -}}
                {{ end }}
            </small>
            {{- end }}
        </a>
    </article>
    {{ end }}
</section>

<hr style="clear: both;">

<a href="/photos/" role="button">View all photos</a> or
<a href="/photos/featured" role="button">‚≠ê View just Featured Photos</a>
{{ end }}