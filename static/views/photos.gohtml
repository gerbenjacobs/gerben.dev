{{ define "content" }}
    <hgroup>
        <h1>{{ .Metadata.Title }} ({{ .TotalEntries }})</h1>
        <p>{{ .Metadata.Description }}</p>
    </hgroup>

    {{ if not .Featured }}
        <p>
            <a href="/photos/featured" role="button">‚≠ê Show featured photos only</a>
        </p>
    {{ end }}

    <section class="photogrid h-feed">
        <p class="p-name" hidden="hidden"><a class="u-url" href="/photos">Photos | gerben.dev</a></p>
        {{ template "photos-paginated" $ }}
    </section>

    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
{{ end }}